generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             Int             @id @default(autoincrement())
  email          String          @unique
  passwordHash   String          @map("password_hash")
  createdAt      DateTime        @default(now()) @map("created_at") @db.Timestamptz
  updatedAt      DateTime        @default(now()) @updatedAt @map("updated_at") @db.Timestamptz
  sessions       Session[]
  checklistItems ChecklistItem[]
  timeblocks     Timeblock[]
  tags           Tag[]
  tagInstances   TagInstance[]
  commands       Command[]

  @@map("users")
}

model Session {
  id        String   @id @default(uuid())
  userId    Int      @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime @map("expires_at") @db.Timestamptz
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz

  @@map("sessions")
}

model ChecklistItem {
  id             Int      @id @default(autoincrement())
  title          String
  completed      Boolean  @default(false)
  sortOrder      Int      @default(0) @map("sort_order")
  orientingBlock Boolean  @default(false) @map("orienting_block")
  section        String?
  userId         Int?     @map("user_id")
  user           User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt      DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  @@map("checklist_items")
}

model Timeblock {
  id             Int      @id @default(autoincrement())
  rayNotes       String?  @map("ray_notes")
  assistantNotes String?  @map("assistant_notes")
  aiNotes        String?  @map("ai_notes")
  datetime       DateTime @db.Timestamptz
  duration       Int      @default(15)
  userId         Int?     @map("user_id")
  user           User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt      DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  @@map("timeblocks")
}

model Tag {
  id            Int           @id @default(autoincrement())
  name          String
  type          String
  description   String?
  parentTagId   Int?          @map("parent_tag_id")
  parentTag     Tag?          @relation("TagParent", fields: [parentTagId], references: [id], onDelete: SetNull)
  childTags     Tag[]         @relation("TagParent")
  suggestedTagIds Json?         @map("suggested_tag_ids")
  noAiSuggest   Boolean       @default(false) @map("no_ai_suggest")
  userId        Int?          @map("user_id")
  user          User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  instances     TagInstance[]
  createdAt     DateTime      @default(now()) @map("created_at") @db.Timestamptz

  @@unique([name, type])
  @@map("tags")
}

model TagInstance {
  id           Int      @id @default(autoincrement())
  tagId        Int      @map("tag_id")
  tag          Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)
  datetime     DateTime @db.Timestamptz
  llmPredicted Boolean  @default(false) @map("llm_predicted")
  approved     Boolean  @default(true)
  llmReason    String?  @map("llm_reason")
  useful       Boolean  @default(false)
  antiUseful   Boolean  @default(false) @map("anti_useful")
  userId       Int?     @map("user_id")
  user         User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz

  @@map("tag_instances")
}

model Command {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  html      String
  userId    Int?     @map("user_id")
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  @@map("commands")
}
